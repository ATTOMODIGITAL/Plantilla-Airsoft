{{ 'component-slider.css' | asset_url | stylesheet_tag }}
{{ 'benefits-slider.css' | asset_url | stylesheet_tag }}

<div
  class="page-width-desktop"
>
  <div
    class="slider-mobile-gutter"
    style="padding-top:{{ section.settings.padding_top }}; padding-bottom:{{ section.settings.padding_bottom }};"
  >
    <ul class="benefits-slider " role="list">
      {%- for block in section.blocks -%}
        <li class="benefits-item" {{ block.shopify_attributes }}>
          <div class="benefits-card">
            <div
              class="benefits-card__icon"
              style="background-color: {{ block.settings.background_color }};"
            >
              {%- if block.settings.icon != 'none' -%}
                {%- render 'icon', icon: block.settings.icon -%}
              {%- endif -%}
            </div>
            <div class="benefits-card__content">
              <p>{{ block.settings.title }}</p>
              <p>{{ block.settings.text }}</p>
            </div>
          </div>
        </li>
      {%- endfor -%}
    </ul>
  </div>
</div>

{% schema %}
{
  "name": "Barra de beneficios",
  "tag": "section",
  "class": "section",
  "max_blocks": 8,
  "settings": [
    {
      "type": "color_scheme",
      "id": "color_scheme",
      "default": "scheme-1",
      "label": "Esquema de color"
    },
    {
      "type": "header",
      "content": "Espaciado"
    },
    {
      "type": "range",
      "id": "padding_top",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "Padding superior",
      "default": 36
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "Padding inferior",
      "default": 36
    }
  ],
  "blocks": [
    {
      "type": "benefit",
      "name": "Beneficio",
      "settings": [
        {
          "type": "color",
          "id": "background_color",
          "label": "Color de fondo",
          "default": "#7ED957"
        },
        {
          "type": "color",
          "id": "icon_color",
          "label": "Color del icono",
          "default": "#000000"
        },
        {
          "type": "select",
          "id": "icon",
          "options": [
            { "value": "none", "label": "Ninguno" },
            { "value": "star-empty", "label": "Estrella" },
            { "value": "settings", "label": "Ajustes" },
            { "value": "shipping", "label": "Camión" },
            { "value": "secure", "label": "Seguro" }
          ],
          "default": "none",
          "label": "Icon"
        },
        {
          "type": "inline_richtext",
          "id": "title",
          "label": "Título",
          "default": "Envío rápido"
        },
        {
          "type": "inline_richtext",
          "id": "text",
          "label": "Texto",
          "default": "Recibe tu pedido en 24/48h"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Barra de beneficios fluida",
      "blocks": [{ "type": "benefit" }, { "type": "benefit" }, { "type": "benefit" }, { "type": "benefit" }]
    }
  ]
}
{% endschema %}
