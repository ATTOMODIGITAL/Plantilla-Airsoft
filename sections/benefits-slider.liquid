{{ 'component-slider.css' | asset_url | stylesheet_tag }}

{%- style -%}
  .section-{{ section.id }}-padding {
    padding-top: {{ section.settings.padding_top | times: 0.75 | round: 0 }}px;
    padding-bottom: {{ section.settings.padding_bottom | times: 0.75 | round: 0 }}px;
  }

  /* Contenedor del scroll fluido */
  .benefits-slider {
    display: flex;
    flex-wrap: nowrap;
    overflow-x: auto;
    scroll-snap-type: x proximity; /* Snap suave, no obligatorio */
    scrollbar-width: none; /* Oculta scrollbar en Firefox */
    gap: 1.5rem;
    padding-bottom: 1rem;
    -webkit-overflow-scrolling: touch;
  }

  .benefits-slider::-webkit-scrollbar {
    display: none; /* Oculta scrollbar en Chrome/Safari */
  }

  .benefits-item {
    flex: 0 0 auto;
    width: 28rem; /* Ancho fijo para que no se aplasten */
    scroll-snap-align: start;
  }

  .benefits-card {
    display: flex;
    align-items: center;
    gap: 1.5rem;
    padding: 1.5rem 2rem;
    border-radius: 0.8rem;
    background: rgb(var(--color-background));
    border: 1px solid rgba(var(--color-foreground), 0.08);
    height: 100%;
  }

  .benefits-card__icon {
    flex: 0 0 40px;
    height: 40px;
    background: #7ED957;
    border-radius: 50%;
    display: flex;
    align-items: center;
    justify-content: center;
  }

  .benefits-card__icon img {
    width: 20px;
    height: 20px;
    object-fit: contain;
  }

  .benefits-card__content {
    flex: 1;
  }

  .benefits-card__content h3 {
    margin: 0;
    font-size: 1.4rem;
    font-weight: 600;
    line-height: 1.2;
  }

  .benefits-card__content p {
    margin: 0.2rem 0 0;
    font-size: 1.2rem;
    opacity: 0.7;
  }

  @media screen and (min-width: 990px) {
    .section-{{ section.id }}-padding {
      padding-top: {{ section.settings.padding_top }}px;
      padding-bottom: {{ section.settings.padding_bottom }}px;
    }

    /* En desktop, si hay pocos, se centran o se ajustan a la cuadrícula */
    .benefits-slider.grid--desktop {
      display: grid;
      grid-template-columns: repeat({{ section.settings.columns_desktop }}, 1fr);
      overflow-x: visible;
      gap: 2rem;
    }

    .benefits-slider.grid--desktop .benefits-item {
      width: 100%;
    }
  }
{%- endstyle -%}

<div class="color-{{ section.settings.color_scheme }} gradient section-{{ section.id }}-padding">
  <div class="page-width">
    {%- if section.settings.title != blank -%}
      <div class="title-wrapper-with-link title-wrapper--no-top-margin">
        <h2 class="{{ section.settings.heading_size }} scroll-trigger animate--slide-in">
          {{ section.settings.title }}
        </h2>
      </div>
    {%- endif -%}

    <div class="slider-mobile-gutter">
      <ul
        class="benefits-slider {% if section.settings.enable_desktop_grid %}grid--desktop{% endif %}"
        role="list"
      >
        {%- for block in section.blocks -%}
          <li
            class="benefits-item scroll-trigger animate--slide-in"
            {{ block.shopify_attributes }}
            style="--animation-order: {{ forloop.index }};"
          >
            <div class="benefits-card">
              <div class="benefits-card__icon">
                {%- if block.settings.icon != blank -%}
                  <img
                    src="{{ block.settings.icon | image_url: width: 80 }}"
                    alt="{{ block.settings.title }}"
                    loading="lazy"
                  >
                {%- else -%}
                  {{ 'image' | placeholder_svg_tag: 'placeholder-svg' }}
                {%- endif -%}
              </div>
              <div class="benefits-card__content">
                <h3>{{ block.settings.title }}</h3>
                <p>{{ block.settings.text }}</p>
              </div>
            </div>
          </li>
        {%- endfor -%}
      </ul>
    </div>
  </div>
</div>

{% schema %}
{
  "name": "Barra de beneficios",
  "tag": "section",
  "class": "section",
  "max_blocks": 8,
  "settings": [
    {
      "type": "inline_richtext",
      "id": "title",
      "default": "¿Por qué elegirnos?",
      "label": "Título"
    },
    {
      "type": "select",
      "id": "heading_size",
      "options": [
        { "value": "h2", "label": "Pequeño" },
        { "value": "h1", "label": "Mediano" },
        { "value": "h0", "label": "Grande" }
      ],
      "default": "h2",
      "label": "Tamaño del título"
    },
    {
      "type": "color_scheme",
      "id": "color_scheme",
      "default": "scheme-1",
      "label": "Esquema de color"
    },
    {
      "type": "checkbox",
      "id": "enable_desktop_grid",
      "label": "En desktop, mostrar cuadrícula fija (no scroll)",
      "default": true
    },
    {
      "type": "range",
      "id": "columns_desktop",
      "min": 2,
      "max": 5,
      "step": 1,
      "default": 4,
      "label": "Columnas en desktop (si la cuadrícula está activa)"
    },
    {
      "type": "header",
      "content": "Espaciado"
    },
    {
      "type": "range",
      "id": "padding_top",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "Padding superior",
      "default": 36
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "Padding inferior",
      "default": 36
    }
  ],
  "blocks": [
    {
      "type": "benefit",
      "name": "Beneficio",
      "settings": [
        {
          "type": "image_picker",
          "id": "icon",
          "label": "Icono"
        },
        {
          "type": "inline_richtext",
          "id": "title",
          "label": "Título",
          "default": "Envío rápido"
        },
        {
          "type": "inline_richtext",
          "id": "text",
          "label": "Texto",
          "default": "Recibe tu pedido en 24/48h"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Barra de beneficios fluida",
      "blocks": [{ "type": "benefit" }, { "type": "benefit" }, { "type": "benefit" }, { "type": "benefit" }]
    }
  ]
}
{% endschema %}
