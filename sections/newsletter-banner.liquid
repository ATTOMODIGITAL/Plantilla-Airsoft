{{ 'component-newsletter-banner.css' | asset_url | stylesheet_tag }}

<div class="newsletter-banner section-{{ section.id }}-padding">
  <div class="newsletter-banner__wrapper page-width">
    {%- if section.settings.image != blank -%}
      <div class="newsletter-banner__media">
        {{
          section.settings.image
          | image_url: width: 1500
          | image_tag: loading: 'lazy', class: 'newsletter-banner__image'
        }}
      </div>
    {%- endif -%}

    <div class="newsletter-banner__content color-{{ section.settings.color_scheme }} gradient">
      <div class="newsletter-banner__box">
        <h2 class="newsletter-banner__heading h1">{{ section.settings.heading | escape }}</h2>
        <div class="newsletter-banner__text rte">{{ section.settings.text }}</div>

        {% form 'customer', class: 'newsletter-banner__form' %}
          <input type="hidden" name="contact[tags]" value="newsletter">
          <div class="newsletter-banner__field-wrapper">
            <div class="field">
              <input
                id="NewsletterForm--{{ section.id }}"
                type="email"
                name="contact[email]"
                class="field__input"
                value="{{ form.email }}"
                aria-required="true"
                autocorrect="off"
                autocapitalize="off"
                autocomplete="email"
                placeholder="INGRESA TU CORREO ELECTRÓNICO"
                required
              >
              <button type="submit" class="newsletter-banner__button" name="commit" id="Subscribe">
                <span class="svg-wrapper">
                  <svg width="20" height="20" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
                    <path d="M5 12H19M19 12L12 5M19 12L12 19" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
                  </svg>
                </span>
              </button>
            </div>
          </div>
          {%- if form.posted_successfully? -%}
            <h3
              class="newsletter-form__message newsletter-form__message--success form__message"
              id="Newsletter-success--{{ section.id }}"
              tabindex="-1"
              autofocus
            >
              ¡Gracias por suscribirte!
            </h3>
          {%- endif -%}
        {% endform %}
      </div>
    </div>
  </div>
</div>

{% schema %}
{
  "name": "Newsletter Banner",
  "tag": "section",
  "class": "section",
  "settings": [
    {
      "type": "image_picker",
      "id": "image",
      "label": "Imagen de fondo/lateral"
    },
    {
      "type": "inline_richtext",
      "id": "heading",
      "default": "Únete al equipo",
      "label": "Título"
    },
    {
      "type": "richtext",
      "id": "text",
      "default": "<p>Suscríbete a nuestro newsletter y sé el primero en conocer nuevos productos, lanzamientos y promociones exclusivas.</p>",
      "label": "Descripción"
    },
    {
      "type": "color_scheme",
      "id": "color_scheme",
      "label": "Esquema de color del cuadro",
      "default": "background-1"
    }
  ],
  "presets": [
    {
      "name": "Newsletter Banner"
    }
  ]
}
{% endschema %}
