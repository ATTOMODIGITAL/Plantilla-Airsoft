{%- style -%}
  .section-{{ section.id }}-padding {
    padding-top: {{ section.settings.padding_top | times: 0.75 | round: 0 }}px;
    padding-bottom: {{ section.settings.padding_bottom | times: 0.75 | round: 0 }}px;
  }

  /* --- FIX ALTURA 0PX Y CAROUSEL (Móvil/Tablet < 990px) --- */
  @media screen and (max-width: 989px) {
    .blog-grid--featured .blog__post.article {
      min-height: 420px; /* Asegura visibilidad en móvil */
    }
    .blog-grid--featured .card-wrapper,
    .blog-grid--featured .card {
      height: 100% !important;
      min-height: 420px;
    }
    .blog-grid--featured.slider {
      display: flex !important; /* Mantiene el comportamiento slider nativo */
      flex-wrap: nowrap !important;
    }
  }

  /* --- LAYOUT BENTO 50/25/25 (Desktop 990px+) --- */
  @media screen and (min-width: 990px) {
    .section-{{ section.id }}-padding {
      padding-top: {{ section.settings.padding_top }}px;
      padding-bottom: {{ section.settings.padding_bottom }}px;
    }

    .blog-grid--featured.grid {
      display: grid !important;
      gap: 2rem !important;
      /* Primera columna 50% (1fr), las otras dos 25% (0.5fr c/u) */
      grid-template-columns: 1fr 0.5fr 0.5fr !important;
      grid-template-rows: repeat(2, 1fr) !important;
      height: 650px; /* Altura fija para el bento */
      flex-wrap: nowrap !important;
      overflow: visible !important;
      transform: none !important;
    }

    /* Anular slider en desktop */
    .blog-grid--featured.slider {
      display: grid !important;
    }

    .section-{{ section.id }} .slider-buttons {
      display: none !important;
    }

    /* Post Principal (Grande) */
    .blog-grid--featured .blog__post:nth-child(1) {
      grid-column: 1 / 2 !important;
      grid-row: 1 / 3 !important;
      width: 100% !important;
      max-width: 100% !important;
      margin: 0 !important;
    }

    /* Posts Secundarios */
    .blog-grid--featured .blog__post:nth-child(n+2) {
      width: 100% !important;
      max-width: 100% !important;
      margin: 0 !important;
    }

    .blog-grid--featured .card {
      height: 100% !important;
    }

    /* Jerarquía de Títulos */
    .blog-grid--featured .blog__post:nth-child(1) .card__heading {
      font-size: 3.8rem !important;
    }
    .blog-grid--featured .blog__post:nth-child(n+2) .card__heading {
      font-size: 1.8rem !important;
    }
    .blog-grid--featured .blog__post:nth-child(n+2) .article-card__excerpt {
      display: none !important;
    }
  }
{%- endstyle -%}

{%- liquid
  assign posts_displayed = section.settings.blog.articles_count
  if section.settings.post_limit <= section.settings.blog.articles_count
    assign posts_exceed_limit = true
    assign posts_displayed = section.settings.post_limit
  endif
-%}

<div class="blog section-{{ section.id }} color-{{ section.settings.color_scheme }} gradient{% if section.settings.heading == blank %} no-heading{% endif %}">
  <div class="page-width isolate section-{{ section.id }}-padding">
    {%- unless section.settings.heading == blank -%}
      <div class="title-wrapper-with-link title-wrapper--no-top-margin">
        <h2
          id="SectionHeading-{{ section.id }}"
          class="blog__title inline-richtext {{ section.settings.heading_size }}"
        >
          {{ section.settings.heading }}
        </h2>
        {%- if section.settings.blog != blank and section.settings.show_view_all -%}
          <a href="{{ section.settings.blog.url }}" class="link underlined-link large-up-hide">
            {{ 'sections.featured_blog.view_all' | t }}
          </a>
        {%- endif -%}
      </div>
    {%- endunless -%}

    <slider-component class="slider-mobile-gutter">
      <ul
        id="Slider-{{ section.id }}"
        class="blog__posts articles-wrapper blog-grid--featured grid grid--peek grid--2-col-tablet slider"
        role="list"
      >
        {%- if section.settings.blog != blank and section.settings.blog.articles_count > 0 -%}
          {%- for article in section.settings.blog.articles limit: section.settings.post_limit -%}
            <li
              id="Slide-{{ section.id }}-{{ forloop.index }}"
              class="blog__post grid__item article slider__slide slider__slide--full-width"
            >
              {% render 'article-card',
                blog: section.settings.blog,
                article: article,
                show_image: true,
                show_date: section.settings.show_date,
                show_author: section.settings.show_author,
                show_excerpt: true
              %}
            </li>
          {%- endfor -%}
        {%- endif -%}
      </ul>

      {%- if posts_exceed_limit -%}
        <div class="slider-buttons large-up-hide">
          <button type="button" class="slider-button slider-button--prev" name="previous" aria-label="Anterior">
            <span class="svg-wrapper">{{ 'icon-caret.svg' | inline_asset_content }}</span>
          </button>
          <div class="slider-counter caption">
            <span class="slider-counter--current">1</span>
            <span aria-hidden="true"> / </span>
            <span class="slider-counter--total">{{ section.settings.post_limit }}</span>
          </div>
          <button type="button" class="slider-button slider-button--next" name="next" aria-label="Siguiente">
            <span class="svg-wrapper">{{ 'icon-caret.svg' | inline_asset_content }}</span>
          </button>
        </div>
      {%- endif -%}
    </slider-component>

    {%- if section.settings.show_view_all -%}
      <div class="blog__view-all center small-hide medium-hide">
        <a href="{{ section.settings.blog.url }}" class="blog__button button">
          {{ 'sections.featured_blog.view_all' | t }}
        </a>
      </div>
    {%- endif -%}
  </div>
</div>

{% schema %}
{
  "name": "Blog Bento Layout",
  "tag": "section",
  "disabled_on": {
    "groups": ["header", "footer"]
  },
  "settings": [
    {
      "type": "blog",
      "id": "blog",
      "label": "Blog"
    },
    {
      "type": "range",
      "id": "post_limit",
      "min": 2,
      "max": 5,
      "step": 1,
      "default": 5,
      "label": "Límite de artículos"
    },
    {
      "type": "inline_richtext",
      "id": "heading",
      "default": "Últimas noticias",
      "label": "Título"
    },
    {
      "type": "select",
      "id": "heading_size",
      "options": [
        { "value": "h2", "label": "Pequeño" },
        { "value": "h1", "label": "Mediano" },
        { "value": "h0", "label": "Grande" }
      ],
      "default": "h1",
      "label": "Tamaño del título"
    },
    {
      "type": "checkbox",
      "id": "show_view_all",
      "default": true,
      "label": "Mostrar botón 'Ver todo'"
    },
    {
      "type": "checkbox",
      "id": "show_date",
      "default": true,
      "label": "Mostrar fecha"
    },
    {
      "type": "checkbox",
      "id": "show_author",
      "default": false,
      "label": "Mostrar autor"
    },
    {
      "type": "color_scheme",
      "id": "color_scheme",
      "label": "Esquema de colores",
      "default": "scheme-1"
    },
    {
      "type": "header",
      "content": "Espaciado"
    },
    {
      "type": "range",
      "id": "padding_top",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "Padding superior",
      "default": 36
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "Padding inferior",
      "default": 36
    }
  ],
  "presets": [
    {
      "name": "Blog Bento Layout"
    }
  ]
}
{% endschema %}
